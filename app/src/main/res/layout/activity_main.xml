<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/imagen_fondo_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/composicion_fondo_v5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="179dp" />

    <ImageView
        android:elevation="10dp"
        android:id="@+id/logo_dinamico_3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/logo_dinamico_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:elevation="10dp"
        android:id="@+id/logo_dinamico_2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/logo_dinamico_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:elevation="10dp"
        android:id="@+id/logo_dinamico_2_1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/logo_dinamico_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:elevation="10dp"
        android:id="@+id/logo_dinamico_2_2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/logo_dinamico_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:elevation="10dp"
        android:id="@+id/logo_dinamico_1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/logo_dinamico_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_app"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_dinamico_3" />

    <TextView
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autores"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textAlignment="center"
        android:layout_marginBottom="25dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Aplicación desarrollada por los alumnos de segundo de Desarrollo Aplicaciones Multiplataforma del curso de 2024/2025 de IES Jándula."
        android:textColor="@color/white75"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_fondo_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
